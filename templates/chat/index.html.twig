{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<h1 class="text-center mt-5">Bienvenue sur le Chat !</h1>

	<div class="container mt-5 bg-light col-6 p-3">

        <div class="container">
            <h4>Déjà membre ? Connectez-vous</h4> 
			
            <form method="POST" action="{{ path('connexion')}}">
                <div class="form-group">
                    <label >Email</label>
                    <input id="username" name="_username" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Mot de passe</label>
                    <input id="password" name="_password" type="password" class="form-control">
                </div>
				 <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="btn btn-primary mt-2" name="login">Connexion</button>
            </form>
        </div>

       

        <div class="container mt-4">
            <h4>Nouveau membre</h4>
            <p style="line-height: 1.5; font-size: .8125rem">Devenez membre dès aujourd'hui – C'est rapide et gratuit !</p>
            <a href="{{path('inscription')}}"> <button class="btn btn-primary" style="width:100%" type="button">Inscrivez-vous</button></a>
        </div>

    </div>
{% endblock %}
