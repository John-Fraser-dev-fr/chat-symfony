{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!
{% endblock %}

{% block body %}
	<h2 class="mt-5 mb-5">Gérer les messages du tchat :</h2>

	<table class="table table-hover bg-primary text-light">
		<thead>
			<tr>
				<th scope="col">Utilisateurs</th>
				<th scope="col">Contenu</th>
				<th scope="col">Date</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for message in messages %}

				<tr class="table-light">
					<th>{{message.user.prenom}} {{message.user.nom}}</th>
					<td>{{message.contenu}}</td>
					<td>{{message.date | date('d/m/Y à H:i')}}</td>
					<td><a href="{{path( 'admin_supp_msg', {'id' : message.id} )}}"><i class="bi bi-trash3"></i></a></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
